{
    "name": "inerciacreativa/html",
    "description": "PHP classes for working with HTML objects",
    "type": "project",
    "keywords": [
        "php",
        "html"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Cuesta",
            "email": "jose.cuesta@inerciacreativa.com",
            "homepage": "https://inerciacreativa.com",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
            "IC\\Html\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IC\\Html\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit -c phpunit.xml.dist",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon.dist"
    }
}
